{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "noEmit": true,
    "paths": {
      "video.js": ["./node_modules/@types/video.js"]
    }
  },
  "include": ["src/**/*.ts", "src/renderer/index.ts"],
  "exclude": ["node_modules", "dist"]
}
